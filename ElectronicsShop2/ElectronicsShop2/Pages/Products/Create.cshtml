@page
@model ElectronicsShop2.Pages.Products.CreateModel
@{
}
<br>
<h2>New Product</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissble fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button tybe='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
<form method=POST>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div calss="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.productInfo.name">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price</label>
        <div calss="col-sm-6">
            <input type="number" class="form-control" name="Price" value="@Model.productInfo.price" min="0">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Discount</label>
        <div calss="col-sm-6">
            <select class="form-control" name="discount" >
               
                <option value=''>Choose</option>
                <option value='0'>0%</option>
                <option value='10'>10%</option>
                <option value='20'>20%</option>
               
            </select>
        </div> 
    </div> 
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Quantity</label>
        <div calss="col-sm-6">
            <input type="number" class="form-control" name="Quantity" value="@Model.productInfo.quantity" value="0" min="0">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div calss="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.productInfo.description" maxlength="255">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Type</label>
        <div calss="col-sm-6">
            <select class="form-control" name="type" >
               
                    <option value=''>Choose</option>
                    <option value='1'>TV</option>
                    <option value='2'>Laptop</option>
                    <option value='3'>Sound System</option>
               
            </select>
        </div> 
    </div> 
    @if (Model.successMessage.Length > 0)
    {
        <div calss="row mb-3">
          <div class="col-sm-9">
            <div class='alert alert-success alert-dismissble fade show' role='alert'>
                <strong>@Model.successMessage</strong>
                <button tybe='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>

          </div>
        </div>
        
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">submit</button>
        </div>
        <div calss="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>